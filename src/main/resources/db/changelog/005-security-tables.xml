<!-- src/main/resources/db/changelog/005-security-tables.xml -->
<databaseChangeLog>

    <changeSet id="005-01-refresh-tokens-fk" author="mediroute">
        <addForeignKeyConstraint
                baseTableName="refresh_tokens"
                baseColumnNames="user_id"
                referencedTableName="app_users"
                referencedColumnNames="id"
                constraintName="fk_refresh_tokens_user"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="005-02-index-app-users-org" author="mediroute">
        <createIndex tableName="app_users" indexName="idx_app_users_org">
            <column name="org_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>